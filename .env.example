# ═══════════════════════════════════════════════════════════
#  AI Store Builder — Environment Variables
#  Copy this to .env and update the values
# ═══════════════════════════════════════════════════════════

# ── App ──
APP_NAME=AI-Store-Builder
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# ── API ──
API_PORT=8000
API_V1_PREFIX=/api/v1

# ── Database (PostgreSQL) ──
POSTGRES_USER=aisb
POSTGRES_PASSWORD=aisb_secret_2026
POSTGRES_DB=ai_store_builder
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://aisb:aisb_secret_2026@db:5432/ai_store_builder

# ── Redis ──
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# ── JWT Auth (❗ غيّر المفتاح في الإنتاج: openssl rand -hex 64) ──
JWT_SECRET_KEY=CHANGE-ME-super-secret-key-2026-ai-store-builder
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ── حدود المتاجر حسب الخطة ──
MAX_STORES_FREE=3
MAX_STORES_PRO=20
MAX_STORES_ENTERPRISE=1000

# ── AI (اتركه فاضي للفالباك المحلي — أو ضع مفتاح OpenAI) ──
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ── CORS ──
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
